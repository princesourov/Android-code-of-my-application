<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ss"
    tools:context=".Spnrpg">


    <TextView
        android:id="@+id/spntx"
        android:layout_width="268dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:text="Spinner"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tnxtx"
        android:layout_width="258dp"
        android:layout_height="84dp"
        android:layout_marginTop="140dp"
        android:text="Thank You "
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/counreyname" />

    <TextView
        android:id="@+id/Cuntx"
        android:layout_width="221dp"
        android:layout_height="145dp"
        android:layout_marginTop="16dp"
        android:text="SAARC
        Country Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spntx" />

    <Spinner
        android:id="@+id/counreyname"
        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewtx" />

    <TextView
        android:id="@+id/viewtx"
        android:layout_width="269dp"
        android:layout_height="85dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/purple_700"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cuntx" />



</androidx.constraintlayout.widget.ConstraintLayout>